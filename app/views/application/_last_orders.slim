- created_orders = strategy.state.created_orders.select { |order| order['side'] == OrdersUpdater::SIDES_MAP[side] }
- if created_orders.any?
  table.table.table-condensed
    thead
      tr
        th ID
        th Volume
        th Price
    tbody
      - created_orders.each do |order|
        tr
          td
            .text-monospace.text-muted= '#' + order['id'].to_s
          td= format_money(order['origin_volume'], strategy.market.base)
          td= format_money(order['price'], strategy.market.quote)

- else
  .text-center.mt-2= middot
